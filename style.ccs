body { 
    margin: 0; 
    overflow: hidden; 
    font-family: Arial, sans-serif;
}

canvas { 
    display: block; 
}

#info {
    position: absolute;
    top: 20px;
    left: 20px;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 15px;
    border-radius: 5px;
    max-width: 300px;
    display: none;
    z-index: 100;
}

